alias: Motion Detector 1 - Reset State After Motion
description: ""
trigger:
  - platform: state
    entity_id:
      - binary_sensor.motion_sensor_1_study_motion
    from: "off"
    to: "on"
condition: []
action:
  - delay:
      hours: 0
      minutes: 0
      seconds: 10
      milliseconds: 0
    enabled: true
  - service: python_script.set_state
    data:
      entity_id: binary_sensor.motion_sensor_1_study_motion
      state: "off"
mode: single
